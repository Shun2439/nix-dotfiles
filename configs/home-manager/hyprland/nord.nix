/* Base Nord Colors */
* {
  background-color: #2e3440; /* nord0 */
  color: #d8dee9; /* nord4 */
  font-family: "Hack Nerd Font", sans-serif;
  font-size: 10pt;
}

window#waybar {
  background-color: #434c5e; /* nord1 */
  border-bottom: 2px solid #4c566a; /* nord3 */
}

#workspaces button {
  padding: 0 5px;
  color: #d8dee9; /* nord4 */
  background-color: transparent;
  border: none;
}

#workspaces button.active {
  color: #88c0d0; /* nord8 */
}

#workspaces button.focused {
  color: #81a1c1; /* nord10 */
}

#workspaces button.urgent {
  color: #bf616a; /* nord11 */
}

#tray {
  padding: 0 10px;
}

#clock {
  padding: 0 10px;
}

